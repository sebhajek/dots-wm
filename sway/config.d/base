# set basic keys
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

#default apps
set $term foot
set $screenshot grim ~/Images/screenshots/scrn-$(date +"%Y-%m-%d-%H-%M-%S").png
set $screenclip slurp | grim -g - ~/Images/screenshots/scrn-$(date +"%Y-%m-%d-%H-%M-%S").png
set $background ~/.images/
set $menu 'rofi -modi run, drun, window  -show drun' 

#font
font pango:pango:"cozette" Regular 12

# Input configuration
input * {
    xkb_layout "us,cz"
    xkb_options "grp:win_space_toggle"
}

input type:touchpad {
      dwt enabled
      tap enabled
}

# bg
output * bg $background fill

# term binding
bindsym $mod+Return exec $term fish

exec_always --no-startup-id dunst -config ~/.config/dunst/dunstrc